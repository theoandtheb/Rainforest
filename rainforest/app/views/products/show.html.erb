<h1>Products#show</h1>
<p>Product Name:  <%= @product.name %></p>
<p>Description:  <br><br><%= @product.description %></p>
<p>Price:  $<%= @product.formatted_price %></p>


	<h3>Reviews</h3>
	<p>Reviews for <%= @product.name %></p>

	<% @product.reviews.each do |review| %>
		<p><%= review.comment %><br>
		<% if review.user != nil %>
			<em>by <%= review.user.email %></em>
			Added on: <%= review.created_at %>
		<% end %>
	<% end %>
<% if current_user != nil %>
	<h4>Post a New Review</h4>

	<%= form_for([@product, @review]) do |f| %>
		<% if @review.errors.any? %>
			<div if="error_explanation">
				<h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved.</h2>
				<ul>
					<% @review.errors.full_messages.each do |msg| %>
						<li><%= msg %>
					<% end %>
				</ul>
			</div>
		<% end %>

		<div class="field">
			<%= f.label :comment %><br>
			<%= f.text_area :comment %>
		</div>
		<div class="action">
		<%= f.submit %>
		</div>
	<% end %>

<% else %>
	<p>To Create a Review, Please <%= link_to "Log In", new_session_path %></p>
<% end %>
